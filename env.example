# PDF AI Mapper Environment Configuration
# Copy this file to .env and modify the values as needed

# Application
APP_NAME=PDF AI Mapper
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=false

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# File Processing
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_TYPES=.pdf,.png,.jpg,.jpeg,.gif,.bmp,.tiff
UPLOAD_DIR=uploads
PROCESSED_DIR=processed_data

# OCR Settings
TESSERACT_TIMEOUT=30
PDF_TIMEOUT=120
MAX_PAGES_FOR_OCR=5

# ML/Categorization
MIN_DOCUMENTS_FOR_CATEGORIZATION=5
LDA_COMPONENTS=8
MAX_FEATURES=1000
CATEGORIZATION_THRESHOLD=0.1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/pdf-ai-mapper.log

# Database (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/pdf_ai_mapper

# Redis (for future use)
# REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
